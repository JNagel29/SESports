<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jetpacktest">

    <!-- Allow network calls -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackTest">

        <!-- your original launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JetpackTest">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Props feature screens -->
        <activity
            android:name=".props.ui2.EventsActivity"
            android:exported="true" />

        <activity
            android:name=".props.ui2.PropsDetailActivity"
            android:exported="true" />

        <!-- (Optional) keep your legacy player detail if still used -->
        <activity
            android:name=".PlayerDetailActivity"
            android:exported="true" />

    </application>
</manifest>
